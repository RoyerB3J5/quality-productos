---
import CarouselService from '../../components/CarouselService.astro';

type Translations = typeof import('../../i18n/en').default;
type ServiceContent = Translations['products']['services'];
interface Props {
  content: ServiceContent;
}
const { content } = Astro.props as Props;
---
<section class="w-full flex flex-col justify-center items-center bg-back py-30 gap-16">
  <div class="w-full max-w-screen xl:max-w-7xl px-5 xl:px-0 flex flex-col justify-center items-start gap-16">
    <div class="w-full flex flex-col justify-center items-start gap-4">
      <div class="flex justify-start items-center gap-2">
        <div class="w-2 h-2 bg-primary"></div>
        <p class="text-paragraph text-[16px] font-normal leading-[150%] uppercase">
            {content.subtitle}
        </p>
      </div>
      <div class="flex flex-col justify-center items-start gap-12">
        <h2 class="text-primary text-[56px] font-semibold leading-[114%]" set:html={content.title}></h2>
        <p class="text-paragraph text-[16px] font-normal leading-[150%]" set:html={content.description}></p>
      </div>
    </div>
    <div class="grid grid-cols-2 justify-center items-center gap-4 w-full">
      {
        content.items.map((item, index)=>{
          const isPartEven = index % 2 === 0;
          return (
            <div class={`w-full aspect-629/452 p-6 rounded-2xl flex flex-col md:flex-row justify-between items-stretch gap-6 bg-white`} data-aos={isPartEven ? 'fade-right' : 'fade-left'}>
              <div class="h-full md:flex-1 flex flex-col justify-center items-start gap-4 w-full md:w-auto max-w-57.75">
                <h3 class="text-paragraph text-[20px] md:text-[24px] font-semibold leading-[133%]" set:html={item.title}></h3>
                <ul class="flex flex-col gap-2">
                  {item.lists.map((list)=>(
                    <li class="flex items-start gap-2">
                      <img src="/images/check-2.svg" alt="Check" width="24" height="24" decoding="async" loading="lazy" class="w-6 h-6"/>
                      <p class="text-paragraph text-[16px] font-normal leading-[150%]">{list}</p>
                    </li>
                  ))}
                </ul>
              </div>
              <div class="h-full w-auto aspect-302/404  rounded-lg relative overflow-hidden">
                <img src={`/images/${item.image}.webp`} alt={item.title} width="302" height="404" decoding="async" loading="lazy" class="w-full h-full object-cover object-center absolute top-0 left-0 inset-0"/>
              </div>
            </div>
          )
        } 
          
        )
      }
    </div>
  </div>
  {/* <CarouselService items={content.items} />*/}
  
</section>