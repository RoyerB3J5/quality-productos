---
type Translations = typeof import('../../i18n/en').default;
type WhyContent = Translations['main']['why'];
interface Props {
  content: WhyContent;
}
const { content } = Astro.props as Props;
---
<section class="bg-white dark:bg-back-dark flex justify-center items-center w-full">
  <div class="w-full max-w-screen xl:max-w-7xl px-5 xl:px-0 flex flex-col md:flex-row justify-center items-center md:items-stretch gap-6 py-20 md:py-30 min-h-0">
    <div class="basis-1/2 flex flex-col justify-center md:justify-between items-start self-stretch min-h-0 gap-6 md:gap-0" id="parentDiv">
      <div class="flex flex-col justify-center items-start gap-6 md:gap-4 " id="contenido">
        <div class="flex justify-center items-center gap-2">
          <div class="w-2 h-2 bg-primary dark:bg-primary-dark"></div>
          <p class="text-paragraph dark:text-paragraph-dark text-[14px] md:text-[16px] font-normal leading-[143%] md:leading-[150%] uppercase ">{content.subtitle}</p>
        </div>
        <h2 class="text-primary dark:text-paragraph-dark text-[28px] md:text-[56px] font-semibold leading-[129%] md:leading-[114%] block md:hidden">{content.title}</h2>
        <p class="text-paragraph dark:text-paragraph-dark text-[14px] md:text-[18px] font-semibold leading-[143%] md:leading-[155%]  max-w-none md:max-w-[70%]">{content.description}</p>
      </div>
      <div class="w-full h-auto rounded-lg relative aspect-628/694 overflow-hidden" id="img-contenedor">
        <img
          src={`/images/why.webp`}
          alt="Imagen de Baños Portátiles"
          width="628"
          height="694"
          class="absolute inset-0 w-full h-full object-cover "
          loading="lazy"
          decoding="async"
        />
      </div>
    </div>
    <div class="basis-1/2 flex flex-col justify-center items-start gap-16 self-stretch min-h-0">
      <h2 class="text-primary dark:text-paragraph-dark text-[56px] font-semibold leading-[114%] hidden md:block">{content.title}</h2>
      <div class="flex flex-col justify-center items-center gap-6">
        {
          content.items.map((item,index)=>{
            return (
              <div class="w-full bg-back dark:bg-secondary-dark p-6 rounded-2xl flex flex-col justify-center items-start gap-4" data-aos="fade-left" data-aos-duration="800" data-aos-delay={index * 100}>
                <div class="flex flex-row md:flex-col justify-center items-center md:items-start gap-4 md:gap-8">
                  <div class="w-14 h-14 rounded-full p-4 bg-primary dark:bg-primary-dark flex justify-center items-center">
                    <img src={`/images/${item.icon}.svg`} alt={item.title} width="9" height="13" class="w-[90%] md:w-[60%] h-auto" decoding="async" loading="lazy"/>
                  </div>
                  <h3 class="text-black dark:text-paragraph-dark text-[20px] md:text-[24px] font-medium md:font-normal leading-[140%] md:leading-[133%]">{item.title}</h3>
                </div>
                <div class="w-full flex flex-col justify-center items-start gap-4">
                  <p class="text-paragraph dark:text-paragraph-dark text-[14px] md:text-[16px] font-normal leading-[143%] md:leading-[150%] capitalize ">{item.description}</p>
                </div>
              </div>
            )
          } 
          )
        }
      </div>
    </div>
  </div>
</section>

<script is:inline>
{
  const parentDiv = document.getElementById('parentDiv');
  const contenidoDiv = document.getElementById('contenido');
  const imgContenedorDiv = document.getElementById('img-contenedor');

  let maxTranslate = 0;
  let animationFrameId = null;
  let contenidoStartTop = 0;
  let lastScrollTop = window.scrollY || document.documentElement.scrollTop;

  const offsetDown = 24;
  const offsetUp = 100;
  const gap = 36;

  function calculateMaxTranslate() {
    if (!parentDiv || !contenidoDiv || !imgContenedorDiv) return;

    const parentHeight = parentDiv.offsetHeight;
    const contenidoHeight = contenidoDiv.offsetHeight;
    const imgHeight = imgContenedorDiv.offsetHeight;

    const freeSpace =
      parentHeight - contenidoHeight - imgHeight;

    maxTranslate = Math.max(
      0,
      freeSpace - gap
    );

    contenidoStartTop =
      contenidoDiv.getBoundingClientRect().top +
      (window.scrollY || document.documentElement.scrollTop);
  }

  function updateTransform() {
    if (!parentDiv || !contenidoDiv || !imgContenedorDiv) return;

    const scrollTop =
      window.scrollY || document.documentElement.scrollTop;

    const isScrollingDown = scrollTop > lastScrollTop;
    lastScrollTop = scrollTop;

    const currentOffset = isScrollingDown
      ? offsetDown
      : offsetUp;

    let translateAmount = 0;

    if (scrollTop >= contenidoStartTop - currentOffset) {
      const scrollProgress =
        scrollTop - (contenidoStartTop - currentOffset);

      translateAmount = Math.min(scrollProgress, maxTranslate);
    }

    contenidoDiv.style.transform =
      `translateY(${translateAmount}px)`;
  }

  function onScroll() {
    if (animationFrameId) {
      cancelAnimationFrame(animationFrameId);
    }
    animationFrameId = requestAnimationFrame(updateTransform);
  }

  calculateMaxTranslate();
  updateTransform();

  window.addEventListener('scroll', onScroll, { passive: true });
  window.addEventListener('resize', () => {
    calculateMaxTranslate();
    updateTransform();
  });
}
</script>
