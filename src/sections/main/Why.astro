---
type Translations = typeof import('../../i18n/en').default;
type WhyContent = Translations['main']['why'];
interface Props {
  content: WhyContent;
}
const { content } = Astro.props as Props;
---
<section class="w-full max-w-screen xl:max-w-7xl px-5 xl:px-0 flex justify-center items-stretch gap-6 py-30 min-h-0">
  <div class="basis-1/2 flex flex-col justify-between items-start self-stretch min-h-0" id="parentDiv">
    <div class="flex flex-col justify-center items-start gap-4 " id="contenido">
      <div class="flex justify-center items-center gap-2">
        <div class="w-2 h-2 bg-primary"></div>
        <p class="text-paragraph text-[16px] font-normal leading-[150%] uppercase ">{content.subtitle}</p>
      </div>
      <p class="text-paragraph text-[18px] font-semibold leading-[155%]  max-w-[70%]">{content.description}</p>
    </div>
    <div class="w-full h-auto rounded-lg relative aspect-628/694 overflow-hidden" id="img-contenedor">
      <img
        src={`/images/why.webp`}
        alt="Imagen de Baños Portátiles"
        width="628"
        height="694"
        class="absolute inset-0 w-full h-full object-cover "
        loading="lazy"
        decoding="async"
      />
    </div>
  </div>
  <div class="basis-1/2 flex flex-col justify-center items-start gap-16 self-stretch min-h-0">
    <h2 class="text-primary text-[56px] font-semibold leading-[114%]">{content.title}</h2>
    <div class="flex flex-col justify-center items-center gap-6">
      {
        content.items.map((item,index)=>{
          return (
            <div class="w-full bg-back p-6 rounded-2xl flex flex-col justify-center items-start gap-8" data-aos="fade-left" data-aos-duration="800" data-aos-delay={index * 100}>
            <div class="w-14 h-14 rounded-full p-4 bg-primary  flex justify-center items-center">
              <img src={`/images/${item.icon}.svg`} alt={item.title} width="9" height="13" class="w-[60%] h-auto" decoding="async" loading="lazy"/>
            </div>
            <div class="w-full flex flex-col justify-center items-start gap-4">
              <h3 class="text-black text-[24px] font-normal leading-[133%]">{item.title}</h3>
              <p class="text-paragraph text-[16px] font-normal leading-[150%] capitalize ">{item.description}</p>
            </div>
          </div>
          )
        } 
        )
      }
    </div>
  </div>
</section>

<script is:inline>
{
  const parentDiv = document.getElementById('parentDiv');
  const contenidoDiv = document.getElementById('contenido');
  const imgContenedorDiv = document.getElementById('img-contenedor');

  let maxTranslate = 0;
  let animationFrameId = null;

  function calculateMaxTranslate() {
    if (!parentDiv || !contenidoDiv || !imgContenedorDiv) return;

    const parentHeight = parentDiv.offsetHeight;
    const contenidoHeight = contenidoDiv.offsetHeight;
    const imgHeight = imgContenedorDiv.offsetHeight;

    const freeSpace = parentHeight - contenidoHeight - imgHeight;
    maxTranslate = Math.max(0, freeSpace - 36);
  }

  function updateTransform() {
    if (!parentDiv || !contenidoDiv || !imgContenedorDiv) return;

    const scrollTop = window.scrollY || document.documentElement.scrollTop;
    const sectionTop = parentDiv.getBoundingClientRect().top + scrollTop;

    let translateAmount = 0;

    if (scrollTop >= sectionTop) {
      const scrollProgress = scrollTop - sectionTop;
      translateAmount = Math.min(scrollProgress, maxTranslate);
    }

    // Agregar mt-5 cuando comience a moverse
    if (translateAmount > 0) {
      contenidoDiv.style.marginTop = '1.25rem';
    } else {
      contenidoDiv.style.marginTop = '0';
    }

    // Aplicar transform sin transition para movimiento fluido
    contenidoDiv.style.transform = `translateY(${translateAmount}px)`;
  }

  function onScroll() {
    if (animationFrameId) {
      cancelAnimationFrame(animationFrameId);
    }
    animationFrameId = requestAnimationFrame(updateTransform);
  }

  calculateMaxTranslate();
  updateTransform();

  window.addEventListener('scroll', onScroll, { passive: true });
  window.addEventListener('resize', () => {
    calculateMaxTranslate();
    updateTransform();
  });
}
</script>