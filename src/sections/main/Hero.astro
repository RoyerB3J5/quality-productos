---
import Button from '../../components/Button.astro';

type Translations = typeof import('../../i18n/en').default;
type HeroContent = Translations['main']['hero'];
interface Props {
  content: HeroContent;
}
const { content } = Astro.props as Props;
---

<section class="w-full flex items-center justify-center relative">
  {/*
    <img
    src="/main/hero.webp"
    alt="Fondo de soluciones"
    width="1440"
    height="900"
    class="absolute inset-0 w-auto md:w-full h-full object-cover -z-20 md:object-center hidden md:block"
    loading="eager"
    decoding="async"
  />
  <img
    src="/main/hero-main-sm.webp"
    alt="Fondo de soluciones"
    width="375"
    height="900"
    class="absolute inset-0 w-full h-full object-cover -z-20 md:hidden block object-center"
    loading="eager"
    decoding="async"
  />
  */}
  
  <div
    class="w-full max-w-screen md:max-w-7xl flex flex-row justify-start items-start sm:items-center lg:items-center gap-4 md:gap-10 px-5 xl:px-0 h-dvh md:h-[55vh] lg:h-screen 3xl:h-[95vh] "
    data-aos="fade-up"
    data-aos-duration="2000"
  >
    <div
      class="flex flex-col items-start justify-center w-full max-w-none sm:max-w-[50%] gap-3 3xl:gap-10 translate-y-10"
    >
      <h1
        class="text-paragraph text-[56px] font-normal leading-[114%]"
        set:html={content.title}
      >
      </h1>
      <p class="text-paragraph text-[16px] font-normal leading-[150%] max-w-100.25" set:html={content.description}></p>
      <div class="flex justify-start items-center gap-4">
        {
          content.buttons.map((item)=>( 
            <Button
              text={item.label}
              textClass={item.text}
              href={item.href}
              target="_blank"
              extraBtnClass={item.back}
              iconName={item.icon}
            />
          ))
        }
      </div>
      
    </div>
  </div>
</section>
