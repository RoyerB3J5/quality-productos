---
import TestimonialCarousel from '../../components/TestimonialCarousel.astro';

type Translations = typeof import('../../i18n/en').default;
type TestimonialsContent = Translations['locations']['orlando-fl']['testimonials'];
interface Props {
  content: TestimonialsContent;
}
const { content } = Astro.props as Props;
---
<section class="w-full flex justify-center items-center dark:bg-back-dark">
  <div class=" w-full max-w-screen xl:max-w-7xl px-5 xl:px-0 flex flex-col md:flex-row justify-between items-center md:items-start py-20 md:py-30 gap-10 md:gap-0">
    <div class="flex flex-col justify-center items-start max-w-none md:max-w-102.75 gap-87.5">
      <div class="flex flex-col justify-center items-center md:items-start gap-4 services-header" >
        <div class="flex justify-start items-center gap-2">
          <div class="w-2 h-2 bg-accent"></div>
          <p class="text-paragraph dark:text-paragraph-dark text-[14px] md:text-[16px] font-normal leading-[143%] md:leading-[150%] uppercase">
              {content.subtitle}
          </p>
        </div>
        <h2 class="text-primary dark:text-paragraph-dark text-[28px] md:text-[56px] font-semibold leading-[129%] md:leading-[114%]">{content.title}</h2>
      </div>
      <div class="md:flex flex-col justify-center items-start gap-2 services-header hidden "> 
              <div class="flex justify-start items-center gap-4">
                <img src={`/images/${content.metric.icon}.svg`} alt={content.metric.title} width="64" height="64" decoding="async" loading="lazy" class="w-8 h-8 "/>
                <h3 class="text-paragraph dark:text-paragraph-dark text-[32px] font-normal leading-[125%]">{content.metric.title}</h3>
              </div>
              <p set:html={content.metric.text} class="text-[16px] font-normal leading-[150%] text-paragraph dark:text-paragraph-dark capitalize"></p>
              <p class="text-paragraph dark:text-paragraph-dark text-[16px] font-semibold leading-[150%] uppercase">{content.metric.description}</p>
      </div>
    </div>
    <TestimonialCarousel content={content.items} />
  </div>
</section>